<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeScreen">


    <fragment
        android:id="@+id/homeScreen"
        android:name="uz.ibrokhimov.mynewsapi.ui.fragment.HomeScreen"
        android:label="screen_home"
        tools:layout="@layout/screen_home" >
        <action
            android:id="@+id/homeToDetail"
            app:destination="@id/screenDetail" />
    </fragment>
    <fragment
        android:id="@+id/screenDetail"
        android:name="uz.ibrokhimov.mynewsapi.ui.fragment.ScreenDetail"
        android:label="screen_detail"
        tools:layout="@layout/screen_detail" >
        <argument
            android:name="articles"
            app:argType="uz.ibrokhimov.mynewsapi.core.model.Article" />
    </fragment>

</navigation>